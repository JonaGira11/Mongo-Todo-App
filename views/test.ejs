<% layout('layouts/boilerplate') %> 




<div class="row">
    <h1 class="text-center">Edit Todo</h1>
    <div class="col-6 offset-3">
        <form action="/todos/<%=todo._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="todo">Edit</label>
                <input class="form-control" type="text" id="todo" name="todo"
                    value="<%=todo.todo %>">
            </div>
        
            <div class="mb-3">
                <button class="btn btn-info">Update Todo</button>
            </div>
        </form>
        </div>
        
    </div>